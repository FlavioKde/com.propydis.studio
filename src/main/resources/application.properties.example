# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
spring.application.name=your-application-name
server.port=8080

# ============================================
# SPRING PROFILES (Choose one)
# ============================================
# spring.profiles.active=dev
# spring.profiles.active=prod

# =============================================
# DATABASE - MONGODB (Choose one option)(local)
# =============================================

# Option 1: Using URI (Recommended)
spring.data.mongodb.uri=mongodb://username:password@localhost:27017/your_database

# Option 2: Using separate properties
# spring.data.mongodb.host=localhost
# spring.data.mongodb.port=27017
# spring.data.mongodb.database=your_database
# spring.data.mongodb.username=your_username
# spring.data.mongodb.password=your_password

# =============================================
# DATABASE - MYSQL (For relational data)(local)
# =============================================
spring.datasource.url=jdbc:mysql://localhost:3306/your_database
spring.datasource.username=your_mysql_username
spring.datasource.password=your_mysql_password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect


# ========================================
# MONGODB - MYSQL - PROD (ATLAS + RAILWAY)
# ========================================
#MONGODB
# Uncomment for production and set MONGO_URI in Atlas dashboard:
# spring.data.mongodb.uri=${MONGO_URI}

#MYSQL
# Uncomment for production - Railway automatically provides these:
# spring.datasource.url=jdbc:mysql://${MYSQLHOST}:${MYSQLPORT}/${MYSQLDATABASE}
# spring.datasource.username=${MYSQLUSER}
# spring.datasource.password=${MYSQLPASSWORD}

# ========================================
# JPA & DATABASE COMMON SETTINGS
# ========================================
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect



# =============================================
# CACHING CONFIGURATION
# =============================================
spring.cache.type=caffeine
spring.cache.caffeine.spec=maximumSize=500,expireAfterWrite=10m

# =============================================
# LOGGING CONFIGURATION
# =============================================
logging.file.name=logs/application.log
logging.level.com.your.package=INFO
logging.level.org.springframework=WARN

# Logback rolling policy
logging.logback.rollingpolicy.max-file-size=10MB
logging.logback.rollingpolicy.max-history=30

# =============================================
# EXTERNAL CONFIGURATION (Optional)
# =============================================
# Uncomment and use environment variables in production:
# spring.data.mongodb.uri=${MONGO_URI:mongodb://localhost:27017/fallback_db}
# spring.datasource.url=${DATABASE_URL}
# spring.datasource.username=${DB_USERNAME}
# spring.datasource.password=${DB_PASSWORD}